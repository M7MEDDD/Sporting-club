<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.club_sporting_final.admin.Controller.DashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="600.0" spacing="10" style="-fx-alignment: center;" styleClass="header">
         <children>
            <Label styleClass="app-title" text="Sporting Club Management" />
         </children>
      </HBox>
   </top>
   <left>
      <VBox prefHeight="367.0" prefWidth="232.0" spacing="20" style="-fx-alignment: center;" styleClass="nav-pane">
         <children>
            <Button onAction="#goToMemberManagement" prefHeight="44.0" prefWidth="200.0" text="Member Management" />
            <Button onAction="#goToTeamManagement" prefHeight="44.0" prefWidth="200.0" text="Team Management" />
            <Button layoutX="30.0" layoutY="71.0" onAction="#goToSubscriptionsManagement" prefHeight="46.0" prefWidth="200.0" text="Subscriptions Management" />
            <Button onAction="#goToExpenseManagement" prefHeight="44.0" prefWidth="200.0" text="Expense Management" />
            <Button onAction="#goToReports" prefHeight="44.0" prefWidth="200.0" styleClass="content-area" text="Reports" />
            <Button onAction="#handleLogout" prefHeight="36.0" prefWidth="200.0" style="-fx-alignment: center;" styleClass="logout-button" text="Logout" />
         </children>
         <opaqueInsets>
            <Insets bottom="38.0" />
         </opaqueInsets>
      </VBox>
   </left>
   <center>
      <VBox alignment="CENTER" spacing="10" styleClass="content-area">
         <Label styleClass="dashboard-welcome-label" text="Welcome to the Dashboard" />
         <Label styleClass="dashboard-instruction-label" text="Select an option from the menu to get started." />
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10" styleClass="footer">

      </HBox>
   </bottom>
</BorderPane>
