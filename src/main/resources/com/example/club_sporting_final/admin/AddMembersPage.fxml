<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.club_sporting_final.admin.Controller.AddMemberController" spacing="10" alignment="TOP_CENTER" prefHeight="500.0" prefWidth="600.0">
    <!-- Title -->
    <Label text="Member Details" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Input Fields -->
    <GridPane hgap="10" vgap="10">
        <!-- Name -->
        <Label text="Name:" />
        <TextField fx:id="nameField" promptText="Enter member's name" GridPane.columnIndex="1" />
        <Label text="Name must not be empty." GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-text-fill: red;" visible="false" fx:id="nameErrorLabel" />

        <!-- Email -->
        <Label text="Email:" GridPane.rowIndex="1" />
        <TextField fx:id="emailField" promptText="Enter email address" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Invalid email format." GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-text-fill: red;" visible="false" fx:id="emailErrorLabel" />

        <!-- Phone -->
        <Label text="Phone Number:" GridPane.rowIndex="2" />
        <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Phone must be 10 digits." GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-text-fill: red;" visible="false" fx:id="phoneErrorLabel" />

        <!-- Subscription Status -->
        <Label text="Subscription Active:" GridPane.rowIndex="3" />
        <CheckBox fx:id="subscriptionStatus" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Team Choice -->
        <Label text="Team:" GridPane.rowIndex="4" />
        <ChoiceBox fx:id="teamChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Please select a team." GridPane.columnIndex="2" GridPane.rowIndex="4" style="-fx-text-fill: red;" visible="false" fx:id="teamErrorLabel" />

        <!-- Subscription Plan -->
        <Label text="Subscription Plan:" GridPane.rowIndex="5" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <RadioButton fx:id="monthlyPlan" text="Monthly" />
            <RadioButton fx:id="quarterlyPlan" text="Quarterly" />
            <RadioButton fx:id="yearlyPlan" text="Yearly" />
        </HBox>
        <Label text="Please select a plan." GridPane.columnIndex="2" GridPane.rowIndex="5" style="-fx-text-fill: red;" visible="false" fx:id="planErrorLabel" />
    </GridPane>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave">
            <tooltip>
                <Tooltip text="Save the member details." />
            </tooltip>
        </Button>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel">
            <tooltip>
                <Tooltip text="Cancel and close the form." />
            </tooltip>
        </Button>
    </HBox>
</VBox>
